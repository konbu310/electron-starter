{
  "name": "electron-starter",
  "description": "Template of Electron app with React, written by TypeScript for Mac",
  "author": "konbu310",
  "version": "0.0.1",
  "main": "dist/main.js",
  "license": "MIT",
  "scripts": {
    "build": "webpack",
    "build:prod": "webpack --node-env production",
    "watch": "webpack --watch",
    "watch:main": "webpack --config-name main --watch",
    "watch:renderer": "webpack --config-name renderer --watch",
    "pack:mac": "yarn run build:prod && electron-builder",
    "start": "electron ."
  },
  "dependencies": {
    "@emotion/css": "^11.1.3",
    "electron-store": "^7.0.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@types/node": "^14.14.37",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "clean-webpack-plugin": "^3.0.0",
    "electron": "^12.0.2",
    "electron-builder": "^22.10.5",
    "html-webpack-plugin": "^5.3.1",
    "prettier": "^2.2.1",
    "ts-loader": "^8.1.0",
    "typescript": "^4.2.3",
    "webpack": "^5.30.0",
    "webpack-bundle-analyzer": "^4.4.0",
    "webpack-cli": "^4.6.0"
  },
  "build": {
    "productName": "Electron Starter",
    "appId": "com.electron.electron-starter",
    "directories": {
      "output": "build"
    },
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "mac": {
      "icon": "icons/icon.icns",
      "target": [
        "dmg"
      ]
    }
  }
}
